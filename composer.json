{
    "name": "patrickrobrecht/flexible-event-and-booking-manager",
    "type": "project",
    "description": "Manage events, their booking forms and bookings via a web-based platform.",
    "license": "proprietary",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.6",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "phpoffice/phpspreadsheet": "^1.28",
        "spatie/laravel-query-builder": "^5.2",
        "spatie/laravel-sluggable": "^3.4"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.8",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "fakerphp/faker": "^1.22",
        "kkomelin/laravel-translatable-string-exporter": "^1.21",
        "laravel/sail": "^1.22",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^7.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^10.1.3",
        "spatie/laravel-ignition": "^2.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "cs": [
            "@csPHP",
            "npm run cs"
        ],
        "csPHP": [
            "phpcs"
        ],
        "csfix": [
            "@csfixPHP",
            "npm run csfix"
        ],
        "csfixPHP": [
            "phpcbf"
        ],
        "production": [
            "@composer install --optimize-autoloader --no-dev"
        ],
        "test": [
            "phpunit"
        ],
        "translate": [
            "php artisan translatable:export de"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
