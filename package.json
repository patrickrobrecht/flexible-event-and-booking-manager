{
    "private": true,
    "scripts": {
        "cs": "npm run csCSS && npm run csJS",
        "csCSS": "stylelint resources/sass/*.scss",
        "csJS": "eslint resources/js/*.js webpack.mix.js",
        "csfix": "npm run csfixCSS && npm run csfixJS",
        "csfixCSS": "stylelint resources/sass/*.scss --fix",
        "csfixJS": "eslint resources/js/*.js webpack.mix.js --fix",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^6.2.0",
        "bootstrap": "^5.2.0",
        "del": "^6.1.1",
        "eslint": "^8.23.0",
        "fs-extra": "^10.1.0",
        "laravel-mix": "^6.0.49",
        "laravel-mix-make-file-hash": "^2.2.0",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.54.8",
        "sass-loader": "^13.0.2",
        "stylelint": "^14.11.0",
        "stylelint-config-recommended-scss": "^7.0.0"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended"
        ],
        "globals": {
            "console": "readonly",
            "document": "readonly",
            "require": "readonly"
        },
        "rules": {
            "indent": [
                "error",
                4
            ],
            "no-var": "error",
            "semi": [
                "error",
                "always"
            ]
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        }
    },
    "stylelint": {
        "extends": "stylelint-config-recommended-scss",
        "plugins": [
            "stylelint-scss"
        ]
    }
}
